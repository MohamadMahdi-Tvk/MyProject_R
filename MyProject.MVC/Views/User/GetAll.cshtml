@using MyProject.SharedService.ModelDto.Users.Queries
@using MyProject.SharedService.Utilities
@model Paginated<GetAllUsersResponse>


@{
    ViewData["Title"] = "اسامی نفرات";
}

<a class="btn btn-primary m-2" asp-controller="User" asp-action="Create">افزودن کاربر</a>

<table class="table table-bordered table-hover">
    <tr>
        <th>آیدی</th>
        <th>نام</th>
        <th>نام خانوادگی</th>
        <th>عملیات</th>
    </tr>

    @foreach (var user in Model.data)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>
                <a asp-controller="User" asp-action="Update" asp-route-Id="@user.Id" class="btn btn-warning">ویرایش</a>
                <a asp-controller="User" asp-action="Delete" asp-route-Id="@user.Id" class="btn btn-danger">حذف</a>
                <a asp-controller="User" asp-action="Info" asp-route-Id="@user.Id" class="btn btn-info">جزئیات</a>
            </td>

        </tr>
    }

</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">


        @for (int i = 1; i <= Model.totalPages; i++)
        {
            <li class="page-item"><a class="page-link" href="/User/GetAll?PageNumber=@i">@i</a></li>
        }

    </ul>
</nav>